<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_consolidation_change_log_tree" model="ir.ui.view">
        <field name="name">scm.consolidation.change.log.tree</field>
        <field name="model">scm.consolidation.change.log</field>
        <field name="arch" type="xml">
            <tree string="Change Log" 
                  decoration-danger="impact_severity == 'critical'" 
                  decoration-warning="impact_severity == 'high'" 
                  decoration-info="impact_severity == 'medium'"
                  multi_edit="1">
                <field name="name"/>
                <field name="consolidation_id"/>
                <field name="change_type"/>
                <field name="change_subtype"/>
                <field name="record_name"/>
                <field name="impact_severity" widget="badge" 
                       decoration-success="impact_severity == 'low'"
                       decoration-warning="impact_severity == 'medium'"
                       decoration-danger="impact_severity == 'high' or impact_severity == 'critical'"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'resolved'"
                       decoration-warning="state == 'assessed'"
                       decoration-info="state == 'draft'"/>
                <field name="create_date"/>
                <field name="resolved_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_consolidation_change_log_form" model="ir.ui.view">
        <field name="name">scm.consolidation.change.log.form</field>
        <field name="model">scm.consolidation.change.log</field>
        <field name="arch" type="xml">
            <form string="Change Log">
                <header>
                    <button name="action_assess_impact" 
                            string="Assess Impact" 
                            type="object" 
                            class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    <button name="action_resolve" 
                            string="Resolve" 
                            type="object" 
                            class="oe_highlight" 
                            invisible="state != 'assessed'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,assessed,resolved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="consolidation_id"/>
                            <field name="change_type"/>
                            <field name="change_subtype"/>
                            <field name="impact_severity" widget="badge" 
                                   decoration-success="impact_severity == 'low'"
                                   decoration-warning="impact_severity == 'medium'"
                                   decoration-danger="impact_severity == 'high' or impact_severity == 'critical'"/>
                        </group>
                        <group>
                            <field name="record_model"/>
                            <field name="record_id"/>
                            <field name="record_name"/>
                            <field name="create_date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="old_value"/>
                            <field name="new_value"/>
                        </group>
                        <group>
                            <field name="resolved_by" 
                                   invisible="state != 'resolved'"/>
                            <field name="resolved_date" 
                                   invisible="state != 'resolved'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes"/>
                            </group>
                        </page>
                        <page string="Resolution Notes" 
                              name="resolution_notes"
                              invisible="state != 'resolved'">
                            <group>
                                <field name="resolution_notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_consolidation_change_log_search" model="ir.ui.view">
        <field name="name">scm.consolidation.change.log.search</field>
        <field name="model">scm.consolidation.change.log</field>
        <field name="arch" type="xml">
            <search string="Change Log">
                <field name="name"/>
                <field name="consolidation_id"/>
                <field name="record_name"/>
                <separator/>
                <filter string="Purchase Request Changes" 
                        name="pr_changes" 
                        domain="[('change_type', '=', 'pr')]"/>
                <filter string="Inventory Changes" 
                        name="inventory_changes" 
                        domain="[('change_type', '=', 'inventory')]"/>
                <filter string="PO Changes" 
                        name="po_changes" 
                        domain="[('change_type', '=', 'po')]"/>
                <separator/>
                <filter string="Critical Impact" 
                        name="critical_impact" 
                        domain="[('impact_severity', '=', 'critical')]"/>
                <filter string="High Impact" 
                        name="high_impact" 
                        domain="[('impact_severity', '=', 'high')]"/>
                <separator/>
                <filter string="Draft" 
                        name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Assessed" 
                        name="assessed" 
                        domain="[('state', '=', 'assessed')]"/>
                <filter string="Resolved" 
                        name="resolved" 
                        domain="[('state', '=', 'resolved')]"/>
                <group expand="0" string="Group By">
                    <filter string="Consolidation Session" 
                            name="group_by_consolidation" 
                            context="{'group_by': 'consolidation_id'}"/>
                    <filter string="Change Type" 
                            name="group_by_type" 
                            context="{'group_by': 'change_type'}"/>
                    <filter string="Impact Severity" 
                            name="group_by_impact" 
                            context="{'group_by': 'impact_severity'}"/>
                    <filter string="Status" 
                            name="group_by_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Company" 
                            name="group_by_company" 
                            context="{'group_by': 'company_id'}"
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_consolidation_change_log" model="ir.actions.act_window">
        <field name="name">Change Log</field>
        <field name="res_model">scm.consolidation.change.log</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_consolidation_change_log_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No change logs found
            </p>
            <p>
                Change logs are created automatically when changes are detected in purchase requests,
                inventory levels, or purchase orders related to consolidation sessions.
            </p>
        </field>
    </record>
</odoo> 