<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fulfillment_plan_tree" model="ir.ui.view">
        <field name="name">scm.pr.fulfillment.plan.tree</field>
        <field name="model">scm.pr.fulfillment.plan</field>
        <field name="arch" type="xml">
            <tree string="Fulfillment Plans">
                <field name="pr_line_id"/>
                <field name="fulfillment_method"/>
                <field name="status"/>
                <field name="planned_qty"/>
                <field name="fulfilled_qty"/>
                <field name="remaining_qty"/>
                <field name="po_id"/>
                <field name="transfer_id"/>
                <field name="timeline"/>
            </tree>
        </field>
    </record>

    <record id="view_fulfillment_plan_form" model="ir.ui.view">
        <field name="name">scm.pr.fulfillment.plan.form</field>
        <field name="model">scm.pr.fulfillment.plan</field>
        <field name="arch" type="xml">
            <form string="Fulfillment Plan">
                <header>
                    <button name="action_suggest_internal_transfer" type="object" string="Suggest Internal Transfer" class="btn-secondary"/>
                    <button name="action_create_internal_transfer" type="object" string="Create Internal Transfer" class="btn-primary" invisible="fulfillment_method != 'internal_transfer'"/>
                </header>
                <sheet>
                    <group>
                        <field name="pr_line_id"/>
                        <field name="fulfillment_method"/>
                        <field name="status"/>
                        <field name="planned_qty"/>
                        <field name="fulfilled_qty"/>
                        <field name="remaining_qty" readonly="1"/>
                        <field name="po_id"/>
                        <field name="transfer_id"/>
                        <field name="timeline"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fulfillment_plan" model="ir.actions.act_window">
        <field name="name">Fulfillment Plans</field>
        <field name="res_model">scm.pr.fulfillment.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and track fulfillment plans for purchase request lines.
            </p>
        </field>
    </record>
</odoo> 