<odoo>
    <record id="view_fulfillment_suggestion_wizard_form" model="ir.ui.view">
        <field name="name">scm.fulfillment.suggestion.wizard.form</field>
        <field name="model">scm.fulfillment.suggestion.wizard</field>
        <field name="arch" type="xml">
            <form string="Fulfillment Suggestion Wizard">
                <group>
                    <field name="pr_line_ids" widget="many2many_tags" readonly="1"/>
                </group>
                <group>
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="pr_line_id" readonly="1"/>
                            <field name="source_type"/>
                            <field name="source_location_id"/>
                            <field name="destination_location_id"/>
                            <field name="planned_qty"/>
                            <field name="planned_start_date"/>
                            <field name="planned_end_date"/>
                            <field name="timeline"/>
                            <field name="note"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fulfillment_suggestion_wizard" model="ir.actions.act_window">
        <field name="name">Suggest Fulfillment</field>
        <field name="res_model">scm.fulfillment.suggestion.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_fulfillment_suggestion_wizard_form"/>
    </record>
</odoo> 